<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_viewout"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="4dp"
        card_view:contentPadding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

            <ImageView
                android:layout_weight="40"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/bookimage"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_weight="60"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">
                <!--text content-->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="60"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:weightSum="100">

                        <!--dividing contact and book info-->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="80"
                            android:weightSum="100">
                            <!--0-->

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="10"
                                android:text="------BOOK INFORMATION------"
                                android:layout_gravity="center"
                                android:gravity="center"
                                />
                            <!--1-->
                            <android.support.v7.widget.CardView
                                android:id="@+id/card_view"
                                android:layout_gravity="center"
                                android:layout_weight="10"
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_margin="5dp"
                                card_view:cardCornerRadius="4dp"
                                card_view:contentPadding="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text="Large Text"
                                        android:id="@+id/BookName"
                                        android:textColor="#000000"
                                        android:layout_gravity="center_horizontal" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                            <!--2-->
                            <android.support.v7.widget.CardView
                                android:id="@+id/card_view0"
                                android:layout_gravity="center"
                                android:layout_width="fill_parent"
                                android:layout_weight="10"
                                android:layout_height="0dp"
                                android:layout_margin="5dp"
                                card_view:cardCornerRadius="4dp"
                                card_view:contentPadding="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:textColor="#000000"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text="AUTHOR :"

                                        android:layout_gravity="center_horizontal" />
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"

                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text="Large Text"
                                        android:textColor="#000000"
                                        android:id="@+id/AuthorName"
                                        android:layout_gravity="center_horizontal" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                            <!--3-->
                            <android.support.v7.widget.CardView
                                android:id="@+id/card_view1"
                                android:layout_gravity="center"
                                android:layout_width="fill_parent"
                                android:layout_weight="10"
                                android:layout_height="0dp"
                                android:layout_margin="5dp"
                                card_view:cardCornerRadius="4dp"
                                card_view:contentPadding="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:orientation="horizontal"
                                    android:weightSum="2">
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text="PUBLICATION :"
                                        android:textColor="#000000"

                                        android:layout_gravity="center_horizontal" />

                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text="Large Text"
                                        android:textColor="#000000"
                                        android:id="@+id/Publication"
                                        android:layout_gravity="center_horizontal" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                            <!--4-->
                            <android.support.v7.widget.CardView
                                android:id="@+id/card_view2"
                                android:layout_gravity="center"
                                android:layout_width="fill_parent"
                                android:layout_weight="10"
                                android:layout_height="0dp"
                                android:layout_margin="5dp"
                                card_view:cardCornerRadius="4dp"
                                card_view:contentPadding="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text="EDITION :"
                                        android:textColor="#000000"
                                        android:layout_gravity="center_horizontal" />
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text="Large Text"
                                        android:id="@+id/Edition"
                                        android:textColor="#000000"
                                        android:layout_gravity="center_horizontal" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                            <!--5-->

                            <android.support.v7.widget.CardView
                                android:id="@+id/card_view3"
                                android:layout_gravity="center"
                                android:layout_width="fill_parent"
                                android:layout_weight="10"
                                android:layout_height="0dp"
                                android:layout_margin="5dp"
                                card_view:cardCornerRadius="4dp"
                                card_view:contentPadding="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text="RENT :"
                                        android:textColor="#000000"
                                        />
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text="Large Text"
                                        android:textColor="#000000"
                                        android:id="@+id/rentprice" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                            <!--6-->

                            <android.support.v7.widget.CardView
                                android:id="@+id/card_view4"
                                android:layout_gravity="center"
                                android:layout_width="fill_parent"
                                android:layout_weight="10"
                                android:layout_height="0dp"
                                android:layout_margin="5dp"
                                card_view:cardCornerRadius="4dp"
                                card_view:contentPadding="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text="DURATION :"
                                        android:textColor="#000000"
                                        />
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text="Large Text"
                                        android:textColor="#000000"
                                        android:id="@+id/rentduration" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                            <!--7-->


                            <android.support.v7.widget.CardView
                                android:id="@+id/card_view5"
                                android:layout_gravity="center"
                                android:layout_width="fill_parent"
                                android:layout_weight="10"
                                android:layout_height="0dp"
                                android:layout_margin="5dp"
                                card_view:cardCornerRadius="4dp"
                                card_view:contentPadding="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text="BRANCH :"
                                        android:textColor="#000000"
                                        android:layout_gravity="center_horizontal" />
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text="Large Text"
                                        android:id="@+id/Branch"
                                        android:textColor="#000000"
                                        android:layout_gravity="center_horizontal" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                            <!--8-->
                            <android.support.v7.widget.CardView
                                android:id="@+id/card_view6"
                                android:layout_gravity="center"
                                android:layout_width="fill_parent"
                                android:layout_weight="10"
                                android:layout_height="0dp"
                                android:layout_margin="5dp"
                                card_view:cardCornerRadius="4dp"
                                card_view:contentPadding="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:weightSum="2">
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text="SUBJECT :"
                                        android:textColor="#000000"
                                        android:layout_gravity="center_horizontal" />
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text="Large Text"
                                        android:id="@+id/Subject"
                                        android:textColor="#000000"
                                        android:layout_gravity="center_horizontal" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                            <!--9-->
                            <android.support.v7.widget.CardView
                                android:id="@+id/card_view7"
                                android:layout_gravity="center"
                                android:layout_width="fill_parent"
                                android:layout_weight="10"
                                android:layout_height="0dp"
                                android:layout_margin="5dp"
                                card_view:cardCornerRadius="4dp"
                                card_view:contentPadding="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text="ADV_ID :"
                                        android:textColor="#000000"
                                        android:layout_gravity="right" />
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text="Large Text"
                                        android:id="@+id/advno"
                                        android:textColor="#000000"
                                        android:layout_gravity="right" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                            <!--10-->
                            <android.support.v7.widget.CardView
                                android:id="@+id/card_view8"
                                android:layout_gravity="center"
                                android:layout_width="fill_parent"
                                android:layout_weight="10"
                                android:layout_height="0dp"
                                android:layout_margin="5dp"
                                card_view:cardCornerRadius="4dp"
                                card_view:contentPadding="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text="ADV_DATE :"
                                        android:textColor="#000000"

                                        android:layout_gravity="right" />
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text="Large Text"
                                        android:id="@+id/addate"
                                        android:textColor="#000000"
                                        android:layout_gravity="right" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <!--contact layout-->

                        <android.support.v7.widget.CardView
                            android:layout_weight="20"
                            android:id="@+id/card_view9"
                            android:layout_gravity="center"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_margin="5dp"
                            card_view:cardCornerRadius="4dp"
                            card_view:contentPadding="10dp"
                            >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="4"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:textColor="#000000"
                                android:layout_weight="1"
                                android:text="------CONTACT INFORMATION------"
                                android:layout_gravity="center"
                                android:gravity="center"/>

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:textColor="#000000"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Large Text"
                                android:id="@+id/mobileTxt"
                                android:layout_gravity="right"
                                />

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:textColor="#000000"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Large Text"
                                android:id="@+id/emailTxt"
                                android:layout_gravity="right"
                                />
                            <Button
                                android:id="@+id/deleteadd"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="REMOVE"
                                android:background="@color/navbarblue"/>
                        </LinearLayout>
</android.support.v7.widget.CardView>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>





    </android.support.v7.widget.CardView>
    </LinearLayout>